@model IEnumerable<BaseBall_Stats.Models.Pitching_Stats>

@{
    var playerId = 0;
}
@foreach (var item in Model)
{
    playerId = item.PlayerId;
}

<input type="button"
       value="Add New Stats Record"
       onclick="location.href = '@Url.Action("AddStats", "Home",new { playerId = playerId })'"
       style="background-color:lightgreen" />


<style>
    table, th, td {
        border: 1px solid;
        text-align: center;
        margin-top: 30px;
        background-color: white;
    }

    body {
        background-color: bisque;
    }

    nav {
        float: left;
        width: 200px;
        height: 250px;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.statYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.W)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.L)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WLPECT)
        </th>
